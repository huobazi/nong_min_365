<div id="header-bar" data-role="header" data-theme="b" >
  <%= link_to '首页', root_path, "class" => "ui-btn-left", "data-icon" => "home" %>
  <h1><%= @title || 'NongMing365' %></h1>
  <%= link_to '注册', signup_path, "class" => "ui-btn-right" %>
</div>
<div data-role="content">
  <%= form_for :session, :url => sessions_path do |f| %>
  <%= render "error_messages", :target => nil %>
  <div data-role="fieldcontain">
    <fieldset data-role="controlgroup">
      <%= f.text_field :login, :placeholder=>'用户名', :required => true %>
    </fieldset>
  </div>
  <div data-role="fieldcontain">
    <fieldset data-role="controlgroup">
      <%= f.password_field :password, :placeholder=>'密码', :required => true %>
    </fieldset>
  </div>
  <div data-role="fieldcontain">
    <fieldset data-role="controlgroup" data-type="vertical">
      <%= f.label :remember_me ,'两周内自动登录' %>
      <%= f.check_box :remember_me %>
    </fieldset>
  </div>
  <input type="submit" data-icon="forward" data-iconpos="right" value="登录" />
  <% end %>
</div>


