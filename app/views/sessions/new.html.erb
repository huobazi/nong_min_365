<div class="row-fluid">
  <div class="span7">
    <%= simple_form_for :session,
      :url => sessions_path, 
      :wrapper => :prepend,
      :html => {:id => 'signin_form', 'data-validate' => 'true' }  do |f| %>
      <%= render "error_messages", :target => nil %>
      <fieldset>
        <legend>登录</legend>
        <%= f.input :login, :label => '用户名' do %>
          <%= content_tag :span, content_tag(:i, '', :class=>'icon-user'), :class => "add-on" %>
          <%= f.input_field :login, :validate => { :presence => true } %>
        <% end %>
        <%= f.input :password, :label => '密码'  do %>
          <%= content_tag :span, content_tag(:i, '', :class=>'icon-key'), :class => "add-on" %>
          <%= f.input_field :password, :validate => { :presence => true } %>
        <% end %>
        <div class="control-group checkbox optional">
          <label class="optional control-label">&nbsp;</label>
          <div class="controls">
            <div class="input-prepend">
              <label for="session_remember_me">
                <%= f.check_box :remember_me, :wrapper => :inline_checkbox, :style => "width:auto;" %>
                两周内自动登录
              </label>
            </div>
          </div>
        </div>
        <div class="form-actions">
          <%= f.submit "登    录", :class => "btn btn-primary btn-large", 'data-disable-with' => "请稍后..." %>
        </div>
      </fieldset>
    <% end %>
  </div>
  <div class="span5">
    <div class="hero-unit bg-white">
      <p>哇，你还没有本站账号？</p>
      <p>
        <%= link_to  '点这里去注册', signup_path, :class=>"btn btn-primary btn-large"%>
      </p>
    </div>
  </div>
</div>
<% content_for :javascripts do %>
  <script type="text/javascript">
    $('#signin_form').enableClientSideValidations();
    </script>
  <% end %>
