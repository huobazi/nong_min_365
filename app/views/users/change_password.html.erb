<div class="content">
  <div class="box">
    <%= simple_form_for @user, :validate => true, :url => update_password_users_path, :method => :put do |f| %>
      <%= render "error_messages", :target => @user %>
      <fieldset>
        <legend>修改密码</legend>
        <%= f.input :current_password, :input_html => { :style => "width:180px;" } %>
        <%= f.input :password, :input_html => { :style => "width:180px;" } %>
        <%= f.input :password_confirmation, :input_html => { :style => "width:180px;" } %>
        <div class="form-actions">
          <%= f.submit "修改密码", :class => "btn btn-primary", 'data-disable-with' => "Loading..."%>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>

