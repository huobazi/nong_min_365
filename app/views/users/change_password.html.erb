<div class="row-fluid">
  <div class="span12">
    <%= simple_form_for @user, 
      :wrapper => :prepend, 
      :validate => true, 
      :url => update_password_users_path, 
      :html => {:id => 'change_password_form'},
      :method => :put do |f| %>
      <%= render "error_messages", :target => @user %>
      <fieldset>
        <legend>修改密码</legend>
        <%= f.input :current_password do %>
          <%= content_tag :span, content_tag(:i, '', :class=>'icon-key'), :class => "add-on" %>
          <%= f.input_field :current_password, :autofocus => true %>
        <% end %>
        <%= f.input :password do %>
          <%= content_tag :span, content_tag(:i, '', :class=>'icon-key'), :class => "add-on" %>
          <%= f.input_field :password %>
        <% end %>
        <%= f.input :password_confirmation do %>
          <%= content_tag :span, content_tag(:i, '', :class=>'icon-key'), :class => "add-on" %>
          <%= f.input_field :password_confirmation %>
        <% end %>
        <div class="form-actions">
          <%= f.submit "修改密码", :class => "btn btn-primary btn-large", 'data-disable-with' => "请稍后..."%>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
<% content_for :javascripts do %>
  <script type="text/javascript">
    $('#change_password_form').enableClientSideValidations();
    </script>
  <% end %>
