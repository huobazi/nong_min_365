<% content_for :breadcrumb do %><span class="current">加入NongMin365.COM</span><% end %>
<div class="content">
  <div class="box">
    <%= simple_form_for @user, :validate => true, :url => users_path do |f| %>
      <%= render "error_messages", :target => @user %>
      <fieldset>
        <legend>注册</legend>
        <%= f.input :username, :hint => "", :input_html => { :value => @user.username, :style => "width:180px;" } %>
        <%= f.input :password, :input_html => { :style => "width:180px;" } %>
        <%= f.input :password_confirmation, :input_html => { :style => "width:180px;" } %>
        <div class="form-actions">
          <%= f.submit "提交注册信息", :class => "btn btn-primary", 'data-disable-with' => "Loading..."%>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>

