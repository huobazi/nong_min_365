<div class="row-fluid">
  <div class="span8">
    <%= simple_form_for @user, 
      :wrapper => :prepend, 
      :validate => true, 
      :html => {:id => 'new_user_form'}  do |f| %>
      <%= render "error_messages", :target => @user %>
      <fieldset>
        <legend>注册</legend>
        <%= f.input :username do %>
          <%= content_tag :span, content_tag(:i, '', :class=>'icon-user'), :class => "add-on" %>
          <%= f.input_field :username %>
        <% end %>
        <%= f.input :password do %>
          <%= content_tag :span, content_tag(:i, '', :class=>'icon-key'), :class => "add-on" %>
          <%= f.input_field :password %>
        <% end %>
        <%= f.input :password_confirmation do %>
          <%= content_tag :span, content_tag(:i, '', :class=>'icon-key'), :class => "add-on" %>
          <%= f.input_field :password_confirmation %>
        <% end %>
        <div class="form-actions">
          <%= f.submit "提交注册信息", 
            :id => 'btnSubmit',
            :class => "btn btn-primary btn-large",
            'data-disable-with' => "请稍后..."
          %>
      </div>
    </fieldset>
  <% end %>
</div>
<div class="span4">
  <div class="hero-unit bg-white">
    <p>已有本站账号？</p>
    <p>
      <%= link_to  '点这里去登录', signin_path, :class=>"btn btn-primary btn-large" %>
    </p>
  </div>
</div>
</div>
<% content_for :javascripts do %>
  <script type="text/javascript">
    <%#$('#new_user_form').enableClientSideValidations();%>
    </script>
  <% end %>
