<%= yield :javascripts %>
<script type="text/javascript">
  window.resizeMap = function(){
    var map = $('.map-section');
    if(map){
      map.children().each(function(){
        $(this).css('width' , (map.innerWidth() - 3 * 7) / 7 );
      });
    }
  }
  $(function(){
    window.resizeMap();
    $(window).bind('scroll  resize', function() {
      window.resizeMap();
    });
  });
  window.resizeMap();
</script>
