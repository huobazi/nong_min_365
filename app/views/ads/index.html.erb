<h1>Listing ads</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Amount</th>
    <th>Xtype</th>
    <th>Contact name</th>
    <th>Contact phone</th>
    <th>Contact qq</th>
    <th>Body</th>
    <th>Password</th>
    <th>Category</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ads.each do |ad| %>
  <tr>
    <td><%= ad.title %></td>
    <td><%= ad.amount %></td>
    <td><%= ad.xtype %></td>
    <td><%= ad.contact_name %></td>
    <td><%= ad.contact_phone %></td>
    <td><%= ad.contact_qq %></td>
    <td><%= ad.body %></td>
    <td><%= ad.password %></td>
    <td><%= ad.category %></td>
    <td><%= ad.user %></td>
    <td><%= link_to 'Show', ad %></td>
    <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
    <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

