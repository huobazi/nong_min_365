<% 
region_options = "<option value=\"\">请选择</option>"
@regions.each  do |r| 
  region_options << "<option value=\"#{r.code}\">#{r.name}</option>"
end %>

$('#<%= @parent_id %>_div').nextAll('div.regions_container').remove();
$('#<%= @parent_id %>_div').after('<div id="<%= @client_element_id %>_div" class="regions_container"  data-role="fieldcontain"> <fieldset data-role="controlgroup"> <select id="<%= @client_element_id %>" name ="<%= @client_element_name %>" class="<%= @parent_css %>" data-level="<%= @children_level %>" data-url="<%= regions_ajax_path %>" ><%= raw region_options %></select></fieldset></div>');
$('#page').page();
$('#<%= @client_element_id %>').selectmenu();

