<div class="row">
  <div class="span3">
    <%= render_cell :items, :homepage_categories_navbar, {:categories => @categories} %>
  </div>
  <div class="span9">
    <%= render "condition_list" %>
    <div id="items-list" class="box">
      <ul class="items">
        <li class="header">
          <span class="area">地区</span>
          <span class="title">标题</span>
          <span class="contact">联系人</span>
          <span class="created">发布时间</span>
        </li>
        <%= content_tag_for(:li,@items) do |item| %>
          <span class="area">
            <%= build_items_list_area_link item %>
          </span>
          <span class="title">
            <%= link_to item.title , item_path(item) %>
            &nbsp;<%= item.amount %>
          &nbsp;<%= item.xtype == 1 ? '供应' : '求购' %>
          </span>
          <span class="contact">
            【<%= item.contact_name %>】
          </span>
          <span class="created">
            <%#= item.created_at.strftime('%Y-%m-%d') %>
            <%#= Time.at(@item.refresh_at).strftime('%Y-%m-%d %H:%M') %>
            <%= Time.at(item.refresh_at).strftime('%Y-%m-%d') %>
          </span>
        <% end %>
    </ul>
    <div class="center">
      <%= paginate @items %>
    </div>
  </div>
</div>
