<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admincp_categories_path  %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admincp_category_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title">新建分类</h2>
    <div class="inner">
      <p>
        <b>父分类:</b>
        <%= @category.parent.nil?? '' : @category.parent.name  %>
      </p>

      <%= form_for @category, :url => admincp_categories_path, :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
